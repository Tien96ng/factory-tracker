@{
  Layout = "_Layout";
}
@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <p>No Machine(s) Available</p>
}

<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{@machine.Name}", "Details", new { machineId = machine.MachineId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a Machine", "Create")</p> 
<p>@Html.ActionLink("Back - Homepage", "Index", "Home")</p>
