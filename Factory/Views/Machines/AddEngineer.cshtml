@{
  Layout = "_Layout";
}
@model Factory.Models.Machine
@using Factory.Models

<h1> Add an Engineer </h1>
<h4> Adding new License for @Html.DisplayFor(model => model.Name) </h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select Engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Add" />
}

<p> @Html.ActionLink($"Back - Machine License: {@Model.Name}", "Details", new { machineId = Model.MachineId })</p>
<p> @Html.ActionLink("Back - Show all Engineers", "Index")</p>